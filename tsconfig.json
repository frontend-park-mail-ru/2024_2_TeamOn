{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2019",
    "module": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["jest", "jsxteamon2"],
    "lib": ["es2019", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsxFactory": "VDom.createElement",
    "jsxFragmentFactory": "VDom.Fragment",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "isolatedModules": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types",
      "./node_modules/jsxteamon2"
    ]
  },
  "include": ["src/**/*", "@types/**/*", "node_modules/jsxteamon2/*"],
  "exclude": ["node_modules"]
}
